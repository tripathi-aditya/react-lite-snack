{
  "include": ["src"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["jest"],
    "lib": ["dom", "ESNext"],
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  }
}
